openapi: 3.0.0

info:
  title: Swagger Test API
  description: UI Run test for Automation Team
  termsOfService: http://google.co.il/

  contact:
    email: shayperp@rafael.co.il

  license:
    name: By Shay perpinial
    url: http://azure.com
